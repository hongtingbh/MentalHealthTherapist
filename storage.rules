rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path under the 'users' directory.
    // The {userId} wildcard captures the user's unique ID from the path.
    match /users/{userId}/{allPaths=**} {
      // Allow read and write operations (includes create, update, delete)
      // only if the requesting user is authenticated (request.auth != null)
      // and their UID matches the {userId} in the file path.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
